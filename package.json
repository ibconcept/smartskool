{
  "name": "smartskool",
  "version": "1.0.0",
  "description": "A comprehensive educational app",
  "author": "William Maina <william09@gmail.com>",
  "scripts": {
    "lint:js": "eslint '**/*.js' --fix",
    "lint:css": "stylelint '**/*.css' --fix",
    "lint:html": "eslint '**/*.html' --fix",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "test": "jest",
    "build": "webpack --config webpack.config.js",
    "start": "webpack serve",
    "deploy": "npm run build && echo 'Deploying to production server...'"
  },
  "dependencies": {
    "react": "^18.0.0",
    "vue": "^3.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^28.0.0",
    "jest": "^29.0.0",
    "babel-core": "^7.0.0",
    "babel-eslint": "^10.0.0",
    "babel-loader": "^8.0.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^7.0.0",
    "babel-preset-vue": "^7.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^5.0.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:vue/recommended"
    ],
    "plugins": [
      "html",
      "react",
      "vue"
    ],
    "rules": {}
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  }
}
